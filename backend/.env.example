# Google Gemini API Configuration
GOOGLE_API_KEY=         # enter google_api_key here
GEMINI_MODEL=gemini-2.0-flash  # Options: gemini-pro, gemini-pro-vision

# OpenWeather API Configuration (for weather data)
OPENWEATHER_API_KEY=        # enter openweather api key here


# Application Settings
APP_NAME=SunShift
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Model Settings
MODEL_TYPE=LSTM  # Options: LSTM, PROPHET, HYBRID
FORECAST_HORIZON=24  # hours
SEQUENCE_LENGTH=24  # hours of historical data for LSTM
TRAIN_TEST_SPLIT=0.8  # 80% train, 20% test

# LSTM Hyperparameters
LSTM_UNITS=64
LSTM_DROPOUT=0.2
LSTM_EPOCHS=50
LSTM_BATCH_SIZE=32

# Data Settings
DATA_COLLECTION_DAYS=30  # days of historical data to collect
USE_SYNTHETIC_DATA=True  # Set to False to use real OpenWeather data

# Database
DATABASE_URL=sqlite:///./greencast.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
